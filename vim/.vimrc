" 启用语法高亮
syntax enable
" 启用行号
set number
set relativenumber
" 设置 tab 大小
set tabstop=2
set shiftwidth=2
set expandtab
" 背景色
set background=dark
" 大小写敏感自动
set ignorecase
set smartcase
" 输入的时候进行搜索
set incsearch
" 自动回到文首
set wrapscan
" 关闭自动备份和交换文件
set nobackup
set nowrap
" 自动换行
set wrap
" 系统剪贴板同步
set clipboard=unnamedplus
" 高亮当前编辑
set colorcolumn=120
set cursorline
set cursorcolumn
