{
    // editor
    "editor.tabSize": 2,
    "editor.fontSize": 15,
    "editor.lineNumbers": "on",
    "editor.insertSpaces": true,
    "editor.hover.sticky": false,
    "editor.fontLigatures": true,
    "editor.suggestSelection": "first",
    "editor.guides.bracketPairs": "active",
    "editor.largeFileOptimizations": false,
    "editor.fontFamily": "Fira Code",
    "editor.bracketPairColorization.enabled": true,
    "C_Cpp.clang_format_fallbackStyle": "google",
    // file manager
    "files.eol": "\n",
    "explorer.confirmDelete": false,
    "files.autoSave": "onFocusChange",
    "explorer.confirmDragAndDrop": false,
    // extension
    "markdownlint.focusMode": true,
    "highlightLine.borderWidth": "1px",
    "highlightLine.borderStyle": "ridge",
    "highlightLine.borderColor": "#65EAB9",
    "go.toolsManagement.autoUpdate": true,
    "markdownlint.config": {
        "no-inline-html": {
            "allowed_elements": [
                "div",
                "img",
                "p",
                "center"
            ]
        }
    },
    "go.addTags": {
        "tags": "json,bson",
        "promptForTags": true,
        "options": "json=omitempty,bson=omitempty"
    },
    // terminal
    "terminal.explorerKind": "external",
    "terminal.integrated.cursorWidth": 3,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Fira Code",
    // windows view
    "workbench.tree.indent": 8,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Angular Dark Theme",
    "workbench.iconTheme": "material-icon-theme",
    // program language
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false
    },
    "[go]": {
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnPaste": true
    }
}