{
    // 编辑页面
    "editor.fontFamily": "FiraCode Nerd Font", // 字体
    "editor.fontLigatures": true,               // 启用连体字
    "editor.fontSize": 17,                      // 字体大小
    "editor.hover.sticky": false,               // 悬浮代码提示
    "editor.insertSpaces": true,                // tab 替换为空格
    "editor.tabSize": 2,                        // 1tab = 2space
    "files.autoSave": "onFocusChange",          // 失去焦点自动保存
    // 文件管理
    "explorer.confirmDelete": false,      // 删除不需要确认
    "explorer.confirmDragAndDrop": false, // 文件拖拽不需要确认
    "files.exclude": {                    // 不显示在文件树
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__":true
    },
    // 扩展
    "highlightLine.borderColor": "#65EAB9",
    "highlightLine.borderStyle": "groove", 
    "highlightLine.borderWidth": "1px",
    "extensions.ignoreRecommendations": true,       // 忽略插件推荐
    "extensions.autoUpdate": true,                  // 插件自动更新
    "extensions.autoCheckUpdates": true,            // 插件自动检查更新
    "go.toolsManagement.autoUpdate": false,         // 禁用 go 工具链自动更新
    "liveServer.settings.donotShowInfoMsg": false,  // 关闭 liveserver 提示
    // 终端
    "terminal.integrated.cursorStyle": "line",                  // 光标样式为竖线
    "terminal.integrated.cursorBlinking": true,                 // 启用光标闪烁
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",    // 字体
    // UI
    "workbench.startupEditor": "none",              // 启动页面
    "window.menuBarVisibility": "toggle",           // 隐藏标题栏
    "workbench.iconTheme": "material-icon-theme",   // 图标主题
    "workbench.colorTheme": "GitHub Dark Default",  // 主题
    // 语言
    "cmake.configureOnOpen": false,                 // 禁用 CMake 自动 configure
    "C_Cpp.clang_format_fallbackStyle": "google",   // C/C++ 代码格式
    "python.linting.flake8Args": [
        "--max-line-length=120",                    // 允许 flake8 单行代码长度
        // "--ignore=E402,F841,F401,E302,E305",     // 忽略部分警告
    ],
    "[python]": {
        "editor.formatOnType": true
    },
    "flake8.args": [
        "--max-line-length=120",                    // 忽略单行代码过长
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length", 
        "120", 
        "--experimental"
    ],
    // VS Code
    "update.mode": "none",                              // 关闭自动更新
    "update.showReleaseNotes": false,                   // 不查看更新信息
    "update.enableWindowsBackgroundUpdates": false,     // 禁用后台更新
    "security.workspace.trust.untrustedFiles": "open",  // 允许打开不信任文件
    "debug.onTaskErrors": "abort"                      // launch.json tasks.json 错误中断 debug
}