{
  // VSCode 基础设置
  "editor.fontFamily": "FiraCode Nerd Font Light",            // 字体
  "editor.fontLigatures": true,                               // 启用连体字
  "editor.renderLineHighlight": "none",                       // 禁用高亮当前行
  "editor.lineNumbers": "relative",                           // 行号显示 relative 相对行号 off 不显示
  "editor.fontSize": 14,                                      // 字体大小
  "editor.hover.sticky": false,                               // 悬浮代码提示
  "editor.insertSpaces": true,                                // tab 替换为空格
  "editor.renderLineHighlightOnlyWhenFocus": false,           // 禁用當前行高亮
  "editor.tabSize": 2,                                        // 1tab = 2space
  "files.autoSave": "onFocusChange",                          // 失去焦点自动保存
  "editor.minimap.enabled": true,                             // 是否启用縮略圖
  "editor.minimap.autohide": true,                            // 是否自动隐藏缩略图
  "editor.hideCursorInOverviewRuler": true,                   // 輸入時隱藏光標
  "editor.scrollbar.horizontal": "hidden",                    // 隱藏垂直滾動條
  "editor.scrollbar.vertical": "hidden",                      // 隱藏水平滾動條
  "editor.semanticHighlighting.enabled": "configuredByTheme", // 語義高亮
  "debug.console.fontSize": 16,                               // 控制台字体大小
  "update.mode": "none",                                      // 关闭自动更新
  "update.showReleaseNotes": false,                           // 不查看更新信息
  "security.workspace.trust.untrustedFiles": "open",          // 允许打开不信任文件
  "debug.onTaskErrors": "abort",                              // launch.json tasks.json 错误中断 debug
  "workbench.colorTheme": "One Dark Pro Mix",                 // 主题
  "workbench.tree.enableStickyScroll": true,                  // 文件树粘性滚动
  "workbench.editor.enablePreview": false,                    // 禁用预览
  "editor.renderWhitespace": "all",                           // 显示空白字符 
  // 文件管理
  "explorer.confirmDelete": false,                    // 删除不需要确认
  "explorer.confirmDragAndDrop": false,               // 文件拖拽不需要确认
  "files.exclude": {                                  // 不显示在文件树
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__":true,
    "**/.venv":true
  },
  // 扩展
  "extensions.ignoreRecommendations": true,               // 忽略插件推荐
  "extensions.autoUpdate": false,                         // 插件自动更新
  "extensions.autoCheckUpdates": false,                   // 插件自动检查更新
  "highlightLine.borderColor": "#F0F8FF",                 // cliffordfajardo.highlight-line-vscode 颜色
  "highlightLine.borderStyle": "groove",                  // cliffordfajardo.highlight-line-vscode 样式
  "highlightLine.borderWidth": "1px",                     // cliffordfajardo.highlight-line-vscode 粗细
  "go.toolsManagement.autoUpdate": false,                 // 禁用 go 工具链自动更新
  "cmake.configureOnOpen": false,                         // 自动 cmake configure
  "vim.useSystemClipboard": true,                         // vim 模式使用系统剪贴板
  "cmake.showOptionsMovedNotification": false,            // cmake 提示
  "github.copilot.chat.localeOverride": "zh-TW",          // github copilot 语言
  "python.createEnvironment.trigger": "off",              // 禁止 Python 提示选择虚拟环境
  // 终端
  "terminal.integrated.cursorStyle": "block",                            // 光标样式为竖线
  "terminal.integrated.cursorBlinking": true,                            // 启用光标闪烁
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",                // 字体
  "terminal.integrated.fontSize": 16,                                    // 内置终端字体大小
  "terminal.external.linuxExec": "alacritty",                            // 外部终端
  "terminal.integrated.profiles.linux": {
    "bash": { "path": "bash", "icon": "terminal-bash", "args": ["-l"] }, // 以登錄狀態初始化 bash
  },
  // UI
  "workbench.startupEditor": "none",                      // 启动页面
  "window.menuBarVisibility": "hidden",                   // 隐藏标题栏
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",                  // 主题
  // 语言
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: google, ColumnLimit: 150}",   // C/C++ 代码格式
  "C_Cpp.formatting": "clangFormat",                                                // C/C++ 格式化引擎
  "git.openRepositoryInParentFolders": "never",                                     // 是否加载父级目录中的 .git
  "[python]": {
      "editor.formatOnType": true,
  },
  "autopep8.args": [
    "--indent-size=2",
    "--max-line-length=120"
  ],
  "flake8.args": [
    "--max-line-length=120",
    "--indent-size=2"
  ],
  "[rust]": {
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "workbench.editorAssociations": {
    "*.csv": "default"
  },


  "liveServer.settings.donotShowInfoMsg": true,
  "cmake.showConfigureWithDebuggerNotification": false,
  "fittencode.languagePreference.displayPreference": "zh-cn",
  "fittencode.languagePreference.commentPreference": "zh-cn",
}