{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.hover.sticky": false,
    "editor.insertSpaces": true,
    "editor.largeFileOptimizations": false,
    "editor.lineNumbers": "on",
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,
    "files.autoSave": "onFocusChange",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.eol": "\n",
    "terminal.explorerKind": "external",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 3,
    "terminal.integrated.fontFamily": "Fira Code Light",
    "terminal.integrated.tabs.enabled": true,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 8,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "highlightLine.borderColor": "#65EAB9",
    "highlightLine.borderStyle": "ridge",
    "highlightLine.borderWidth": "1px",

    "go.toolsManagement.autoUpdate": true,
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.suggest.snippetsPreventQuickSuggestions": false
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true
    },
    "go.addTags": {
        "options": "json=omitempty,bson=omitempty",
        "promptForTags": true,
        "tags": "json,bson",
    },
    "markdownlint.focusMode": true,
    "markdownlint.config": {
        "no-inline-html": {"allowed_elements": ["div" ,"img", "p"]}
    },
}
